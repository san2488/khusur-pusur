<h1>Report</h1>
<table class="report">
  <tr>
    <th>Post</th>
    <th>Author</th>
    <th>Comments</th>
    <th>Votes</th>
    <th>Last Modified</th>
  </tr>
  <% @posts.each do |post| %>

      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.user.name.capitalize %></td>
        <td><%= post.comments.count %></td>
        <td><%= post.votes.count %></td>
        <td><%= post.updated_at.localtime.asctime %></td>
      </tr>
  <% end %>
</table>