<h1>Listing Users</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.title %></td>
        <td><%= user.content %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_post_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

